{
	"name": "generic-ptpv2-client",
	"version": "1.1.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "run build && companion-module-build",
		"build": "rimraf dist && run build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "run lint:raw .",
		 "test": "vitest --run"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-generic-ptpv2-client.git"
	},
	"engines": {
		"node": "^22.14",
		"yarn": "^4"
	},
	"dependencies": {
		"@companion-module/base": "~1.14.1",
		"es-toolkit": "^1.44.0"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.7.1",
		"@types/node": "^22.19.13",
		"eslint": "^9.39.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"rimraf": "^6.1.3",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.56.1",
		"vitest": "^4.0.18"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"packageManager": "yarn@4.12.0"
}
